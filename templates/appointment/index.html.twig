{% extends 'base_backofficeclient.html.twig' %}

{% block title %}Mes rendez-vous{% endblock %}

{% block body %}
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card p-3">
                <h6>CA de la semaine passée</h6>
                <h3>{{ CAlastweek/100 }} €</h3>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card p-3">
                <h6>CA prévu cette semaine</h6>
                <h3>{{ CAthisweek/100 }} €</h3>
            </div>
        </div>
    </div>

    <h4>Export CSV</h4>
    {{ form(form) }}

    <h4>Prochains rendez-vous</h4>
    <table class="table table-dark table-striped mt-3">
        <thead>
        <tr>
            <th>Date</th>
            <th>Client</th>
            <th>Prestations</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for appointment in appointments %}
            <tr>
                <td>{{ appointment.startDateTime|date("H:i d-m-Y") }}</td>
                <td>{{ appointment.firstname }} {{ appointment.lastname }}</td>
                <td>{% for appointmentItem in appointment.appointmentItems %} {{ appointmentItem.name }} {% endfor %}</td>
                <td><a href="{{ path("app_appointment_details", {"id": appointment.id}) }}" class="btn btn-outline-light">Details</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
